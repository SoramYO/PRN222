@page
@model PRN222.LAB2.RazorPages.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="create-container">
    <div class="create-header">
        <h1>Create New Product</h1>
        <p>Add a new product to your inventory</p>
    </div>

    <div class="create-card">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="Product.ProductId">Product ID</label>
                <input asp-for="Product.ProductId" class="form-control" placeholder="Enter product ID" />
                <span asp-validation-for="Product.ProductId" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.ProductName">Product Name</label>
                <input asp-for="Product.ProductName" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Product.ProductName" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId">Category</label>
                <select asp-for="Product.CategoryId" class="form-control custom-select" asp-items="ViewBag.CategoryId">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="field-validation-error"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Product.UnitsInStock">Units In Stock</label>
                    <input asp-for="Product.UnitsInStock" class="form-control" placeholder="Enter stock quantity" />
                    <span asp-validation-for="Product.UnitsInStock" class="field-validation-error"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Product.UnitPrice">Unit Price</label>
                    <div class="input-group">
                        <input asp-for="Product.UnitPrice" class="form-control" placeholder="Enter price" />
                    </div>
                    <span asp-validation-for="Product.UnitPrice" class="field-validation-error"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-create">
                    <i class="fas fa-plus-circle"></i> Create Product
                </button>
                <a asp-page="Index" class="btn-cancel">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


