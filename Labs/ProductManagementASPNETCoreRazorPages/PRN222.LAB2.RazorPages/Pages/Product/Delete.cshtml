@page
@model PRN222.LAB2.RazorPages.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="delete-container">
    <div class="delete-header">
        <h1>Delete Product</h1>
        <p>Please confirm if you want to delete this product</p>
    </div>

    <div class="delete-card">

        <div class="product-info">
            <div class="product-header">
                <h2>@Model.Product.ProductName</h2>
                <div class="product-category">
                    <span class="category-badge">@Model.Product.Category.CategoryName</span>
                </div>
            </div>

            <div class="info-grid">
                <div class="info-group">
                    <div class="info-label">Product ID</div>
                    <div class="info-value">@Model.Product.ProductId</div>
                </div>

                <div class="info-group">
                    <div class="info-label">Price</div>
                    <div class="info-value price-value">$@Html.DisplayFor(model => model.Product.UnitPrice)</div>
                </div>

                <div class="info-group">
                    <div class="info-label">Stock</div>
                    <div class="info-value">@Html.DisplayFor(model => model.Product.UnitsInStock) units</div>
                </div>

                <div class="info-group">
                    <div class="info-label">Category</div>
                    <div class="info-value">@Html.DisplayFor(model => model.Product.Category.CategoryName)</div>
                </div>
            </div>
        </div>

        <form method="post" class="delete-form">
            <input type="hidden" asp-for="Product.ProductId" />
            <div class="action-buttons">
                <button type="submit" class="btn-delete">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
                <a asp-page="./Index" class="btn-cancel">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .delete-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .delete-header {
        margin-bottom: 25px;
        text-align: center;
    }

        .delete-header h1 {
            font-size: 28px;
            color: #334152;
            margin-bottom: 8px;
        }

        .delete-header p {
            color: #6c757d;
            font-size: 16px;
        }

    .delete-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        padding: 30px;
        margin-bottom: 30px;
    }

    .warning-box {
        display: flex;
        background-color: #fff8ee;
        border-left: 4px solid #ff9800;
        padding: 20px;
        border-radius: 6px;
        margin-bottom: 25px;
    }

    .warning-icon {
        font-size: 24px;
        color: #ff9800;
        margin-right: 15px;
        display: flex;
        align-items: center;
    }

    .warning-text h3 {
        color: #e65100;
        font-size: 18px;
        margin: 0 0 8px 0;
    }

    .warning-text p {
        color: #795548;
        margin: 0;
    }

    .product-info {
        margin-bottom: 25px;
        padding-bottom: 25px;
        border-bottom: 1px solid #e1e5eb;
    }

    .product-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

        .product-header h2 {
            font-size: 24px;
            font-weight: 600;
            color: #334152;
            margin: 0;
        }

    .category-badge {
        display: inline-block;
        padding: 6px 12px;
        background-color: #e9f2ff;
        color: #4a90e2;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .info-group {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-weight: 500;
        color: #6c757d;
        margin-bottom: 5px;
    }

    .info-value {
        color: #334152;
    }

    .price-value {
        font-weight: 600;
        color: #28a745;
    }

    .delete-form {
        margin-top: 20px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
    }

    .btn-delete, .btn-cancel {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: 500;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
    }

        .btn-delete:hover {
            background-color: #c82333;
            color: white;
        }

    .btn-cancel {
        background-color: #f8f9fa;
        color: #6c757d;
        border: 1px solid #ced4da;
    }

        .btn-cancel:hover {
            background-color: #e9ecef;
            color: #5a6268;
            text-decoration: none;
        }

        .btn-delete i, .btn-cancel i {
            margin-right: 8px;
        }

</style>

